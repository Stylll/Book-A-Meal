{
  "name": "book-a-meal",
  "version": "1.0.0",
  "description": "An application where customers can make food orders and vendors can know what a customer wants to eat",
  "main": "index.js",
  "scripts": {
    "migrate:db-prod": "sequelize db:migrate:undo:all --env=production && sequelize db:migrate --env=production",
    "migrate:db-dev": "sequelize db:migrate:undo:all --env=development && sequelize db:migrate --env=development",
    "migrate:db": "sequelize db:migrate:undo:all --env=test && sequelize db:migrate --env=test",
    "pretest": "npm run migrate:db",
    "test:server": "npm run pretest && set NODE_ENV=test&& nyc --reporter=html --reporter=text --reporter=lcov mocha --compilers js:babel-core/register server/tests/db/menus.test.js --timeout 10000 --exit",
    "start": "babel-node ./server/server",
    "start:dev": "nodemon --exec babel-node ./server/server --trace-warnings",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint \"server/**/*.js\" app.js --fix",
    "heroku:server": "babel-node ./server/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stylll/Book-A-Meal.git"
  },
  "nyc": {
    "exclude": [
      "server/tests"
    ]
  },
  "keywords": [
    "Book",
    "Meal",
    "Food"
  ],
  "author": "Stephen Aribaba",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Stylll/Book-A-Meal/issues"
  },
  "homepage": "https://github.com/Stylll/Book-A-Meal#readme",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "cloudinary": "^1.11.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-trimmer": "0.0.3",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "mocha": "^5.1.1",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "open": "0.0.5",
    "path": "^0.12.7",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "promise-sequential": "^1.1.1",
    "sequelize": "^4.37.6",
    "supertest": "^3.0.0",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "istanbul": "^0.4.5",
    "nodemon": "^1.17.3",
    "nyc": "^11.7.1",
    "rimraf": "^2.6.2"
  }
}
